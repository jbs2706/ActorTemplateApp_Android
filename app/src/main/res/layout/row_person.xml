<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip">

    <TextView
        android:text="Name"
        android:background="@drawable/project_background"
        android:layout_width="wrap_content"
        android:id="@+id/name"
        android:textSize="16dip"
        android:textStyle="bold"
        android:layout_height="wrap_content"></TextView>

    <TextView android:text="Email"
        android:background="@drawable/project_background"
        android:layout_width="wrap_content"
        android:id="@+id/email"
        android:layout_height="wrap_content"
        android:textSize="14dip"
        android:layout_below="@+id/name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></TextView>

    <TextView android:text="Function"
        android:background="@drawable/project_background"
        android:layout_width="wrap_content"
        android:id="@+id/function"
        android:layout_height="wrap_content"
        android:textSize="14dip"
        android:layout_below="@+id/email"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></TextView>

    <TextView android:text="Phonenumber"
        android:background="@drawable/project_background"
        android:layout_width="wrap_content"
        android:id="@+id/phonenumber"
        android:layout_height="wrap_content"
        android:textSize="14dip"
        android:layout_below="@+id/function"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></TextView>

    <TextView android:text="Notes"
        android:background="@drawable/project_background"
        android:layout_width="wrap_content"
        android:id="@+id/notes"
        android:layout_height="wrap_content"
        android:textSize="14dip"
        android:layout_below="@+id/phonenumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></TextView>

    <TextView android:text="Photo placeholder"
        android:background="@drawable/project_background"
        android:layout_width="wrap_content"
        android:id="@+id/photo"
        android:layout_height="wrap_content"
        android:textSize="14dip"
        android:layout_below="@+id/notes"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></TextView>

</RelativeLayout>