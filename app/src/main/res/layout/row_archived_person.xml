<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="6dip">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/archivePersonName"
        android:textSize="16dip"
        android:textStyle="bold"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/archivePersonEmail"
        android:layout_height="wrap_content"
        android:textSize="14dip"
        android:layout_below="@+id/archivePersonName"
        android:layout_alignLeft="@id/archivePersonName"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/archivePersonFunction"
        android:layout_height="wrap_content"
        android:textSize="14dip"
        android:layout_below="@+id/archivePersonEmail"
        android:layout_alignLeft="@+id/archivePersonEmail"/>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#c0c0c0"/>

</RelativeLayout>